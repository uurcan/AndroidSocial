<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="FragmentFeedBinding" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_categories"
            android:id="@+id/categories_feed"/>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="12"
                android:id="@+id/item_feed_view"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/rv_item_feed_layout"
                    android:layout_weight="12"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_feed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_feed"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shadow_effect"
                    android:layout_weight="1"
                    android:id="@+id/layout_paging_director"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:background="@drawable/corner_background"
                        android:id="@+id/image_paging_go_back"
                        android:contentDescription="@null"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_prev_page"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/text_paging_current_page"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <ImageView
                        android:background="@drawable/corner_background"
                        android:id="@+id/image_paging_go_forward"
                        android:contentDescription="@null"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_next_page"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</layout>